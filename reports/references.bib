	journal = {Optics Express},
	author = {Zhao, Chunyu and Burge, James H.},
	month = dec,
	year = {2007},
	note = {Publisher: Optica Publishing Group},
	keywords = {Distortion, Optical aberrations, Optical testing, Shearing interferometry, Wavefront distortions, Zernike polynomials},
	pages = {18014--18024},
	file = {Full Text PDF:C\:\\Users\\gentle\\Zotero\\storage\\68RT83KS\\Zhao and Burge - 2007 - Orthonormal vector polynomials in a unit circle, P.pdf:application/pdf},
