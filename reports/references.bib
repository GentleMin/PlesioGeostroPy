	author = {Jackson, Andrew and Maffei, Stefano},
	month = nov,
	year = {2020},
	note = {Publisher: Royal Society},
	keywords = {geomagnetism, Earth's core, secular variation},
	pages = {20200513},
	file = {Full Text PDF:C\:\\Users\\gentle\\Zotero\\storage\\USJPD9DP\\Jackson and Maffei - 2020 - Plesio-geostrophy for Earth’s core I. Basic equat.pdf:application/pdf},
